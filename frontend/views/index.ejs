<form action="/formGET" method="GET" class="form-example">
  <h1>Méthode GET</h1>
  <div class="form-example">
    <label for="id_tache">ID de la tache: </label>
    <input type="integer" name="id_tache" id="id_tache" required>
  </div>
  <div class="form-example">
    <input type="submit" value="submit">
  </div>
</form>

<form action="http://localhost:3000/taches" method="POST" class="form-example">
  <h1>Méthode POST</h1>
  <div class="form-example">
    <label for="title">title: </label>
    <input type="text" name="title_tache" id="title_tache" required>
  </div>
  <p>Dates au format : YYYY-MM-DD HH:MM:SS.SSS </p>
  <div class="form-example">
    <label for="dateBegin">dateBegin: </label>
    <input type="text" name="dateBegin_tache" id="dateBegin_tache" required>
  </div>
  <div class="form-example">
    <label for="dateEnd">dateEnd: </label>
    <input type="text" name="dateEnd_tache" id="dateEnd_tache" required>
  </div>
  <div class="form-example">
    <label for="text">statut: </label>
    <select type="text" name="statut_tache" id="statut_tache">
      <option>Non précisé</option>
      <option>Une tâche est requise</option>
      <option>En cours</option>
      <option>Achevée</option>
      <option>Annulée</option>
    </select>
  </div>
  <div class="form-example">
    <p>Prière de séparer les tags par une virgule.</p>
    <label for="tags">tags: </label>
    <textarea type="text" name="tags_tache" id="tags_tache" required></textarea>
  </div>        
  <div class="form-example">
    <input type="submit" value="submit">
  </div>
</form>

