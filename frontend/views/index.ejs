<div class="result_panel">
  <h1 class="h1_panel">Panel de résultat</h1>

  <% if (state) {%>
    <p id="infos"> <%=state["state"] %></p>
  <% } %>

  <% if (req_response) { %>
  <table>
    <thead>
      <tr>
        <th>Id</th>
        <th>Title</th>
        <th>DateBegin</th>
        <th>DateEnd</th>
        <th>Statut</th>
        <th>Tags</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= req_response["id"] %></td>
        <td><%= req_response["title"] %></td>
        <td><%= req_response["dateBegin"] %></td>
        <td><%= req_response["dateEnd"] %></td>
        <td><%= req_response["statut"] %></td>
        <td><%= req_response["tags"] %></td>
      </tr>
    </tbody>
  </table>
  <% } %>

</div>
