<div class="result_panel">
  <h1 class="h1_panel">Panel de résultat</h1>

  <% if (state) {%>
    <p id="infos"> <%=state["state"] %></p>
  <% } %>

  <% if (req_response) { %>
  <table>
    <thead>
      <tr>
        <th>Id</th>
        <th>Title</th>
        <th>DateBegin</th>
        <th>DateEnd</th>
        <th>Statut</th>
        <th>Tags</th>
      </tr>
    </thead>
    <tbody>
      <% for (let index = 0; index < req_response.length; index++) { %>
      <tr>
        <td><%= req_response[index]["id"] %></td>
        <td><%= req_response[index]["title"] %></td>
        <td><%= req_response[index]["dateBegin"] %></td>
        <td><%= req_response[index]["dateEnd"] %></td>
        <td><%= req_response[index]["statut"] %></td>
        <td><%= req_response[index]["tags"] %></td>
      </tr>
      <% } %>
    </tbody>
  </table>
  <% } %>

</div>
